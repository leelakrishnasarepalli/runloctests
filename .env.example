# PMI Lakeshore Test Automation Environment Variables
# Copy this file to .env and configure your local settings

# Target website URL
BASE_URL=https://pmiloc.org

# Test execution environment
CI=false
HEADLESS=false

# Optional: Start local server for testing
START_SERVER=false

# Optional: Webhook notification URL for test results
# WEBHOOK_NOTIFICATION_URL=https://your-webhook-url.com/notify

# Browser settings
BROWSER_TIMEOUT=60000
SLOW_MOTION_DELAY=500

# Test configuration
MAX_RETRIES=2
PARALLEL_WORKERS=1

# Debugging
DEBUG_MODE=false
SCREENSHOT_ON_FAILURE=true
VIDEO_ON_FAILURE=true

# GitHub API Configuration (if needed for CI/CD automation)
# GITHUB_TOKEN=your_github_personal_access_token_here
# GITHUB_REPO_OWNER=your_username
# GITHUB_REPO_NAME=your_repo_name