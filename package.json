{
  "name": "playwright-mcp-automation",
  "version": "1.0.0",
  "description": "Test automation project using Playwright MCP with GitHub Actions and webhook triggers",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:ui": "playwright test --ui",
    "test:event": "playwright test tests/pmiloc-event-navigation.spec.ts",
    "test:banner": "playwright test tests/pmiloc-banner-navigation.spec.ts",
    "test:visible": "playwright test --headed --project=pmiloc-chromium",
    "test:all-visible": "playwright test --headed",
    "test:events": "ts-node tests/run-event-tests.ts",
    "report": "playwright show-report",
    "report:custom": "open test-results/pmiloc-test-report.html || start test-results/pmiloc-test-report.html",
    "install:browsers": "playwright install"
  },
  "keywords": ["playwright", "mcp", "automation", "testing", "github-actions"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "ts-node": "^10.9.0"
  },
  "dependencies": {
    "dotenv": "^16.3.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}